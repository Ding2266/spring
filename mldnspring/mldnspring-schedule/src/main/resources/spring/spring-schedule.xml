<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.3.xsd">
	<!-- 定义了一个新的专门用于自定义任务调度方法的工厂任务类 -->
	<bean id="methodTaskFactory" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject"> <!-- 定义要执行的任务程序类的对象 -->
			<bean class="cn.mldn.mldnspring.schedule.quartz.MyTask"/> <!-- 任务的执行类 -->	
		</property>
		<property name="targetMethod" value="runTask"/> <!-- 设置执行任务的方法 -->
	</bean>
	
	<!-- 要定义任务除法的工厂类，使用CRON进行触发操作 -->
	<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<!-- 定义每一次间隔触发时要执行的具体的任务详情 -->
		<property name="jobDetail" ref="methodTaskFactory"/>
		<property name="cronExpression" value="* * * * * ?"/> <!-- 设置任务的触发时间 -->
	</bean>
	<!-- 配置任务的执行调度器 -->
	<bean id="scheduleFactory" class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<array>
				<ref bean="cronTrigger"/> <!-- 设置任务触发器 -->
			</array>
		</property>
	</bean>
	
	<!-- 以前要写这个配置项，现在不写也可以了 -->
	<context:annotation-config/>
	<!-- 定义注解的扫描包，也就是说你必须 配置好扫描包之后才可以扫描该包中所有类上的注解信息-->
	<!-- <context:component-scan base-package="cn.mldn.mldnspring.context.dao,cn.mldn.mldnspring.context.service"/> -->
	<context:component-scan base-package="cn.mldn.mldnspring.context"/>
</beans>
